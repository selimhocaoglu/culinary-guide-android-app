<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#000"
        android:text="Recipe Name"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_recipe_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#666"
        android:text="Category"
        android:layout_below="@id/tv_recipe_name"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_recipe_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"
        android:text="Ingredients"
        android:layout_below="@id/tv_recipe_category"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_recipe_ingredients_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="Ingredients Details"
        android:layout_below="@id/tv_recipe_ingredients"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_recipe_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"
        android:text="Instructions"
        android:layout_below="@id/tv_recipe_ingredients_detail"/>

    <TextView
        android:id="@+id/tv_recipe_instructions_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="Instructions Details"
        android:layout_below="@id/tv_recipe_instructions"/>
</RelativeLayout>
